<html>
<head>
    <title>Clients</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<div class="container">
    <h1>{{ stylist.getName }}</h1>

    {% if clients is not empty %}
        <p>Here are the clients</p>
        <ul>
            {% for client in clients %}
                <li>{{ client.getPatron }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a client</h4>

    <form action='/clients' method='post'>
        <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">

        <input id='patron' name='patron' type='text' placeholder="enter client's name">

        <button type='submit'>Add</button>
    </form>

    <p><a href='/'>Home</a></p>
</div>
</body>
</html>